<!DOCTYPE html>
<html lang="en">
    <%-include ("./partials/head")%>
<body>
    <%-include ("./partials/header")%>

    <main class="main-main">
        <div class="div-detail-1">
            <div class="div-detail-2">
                <img src="/images/<%= producto.image %>">
            </div>
            <div>
                    <div class="main-detalle-edit">  
                            
                            <h3 class="titulo-producto-detail"><%= producto.name %></h3>
                    </div>
                    <div>
                        <div class="descripcion-prod-detail">
                            <p id="precio-base">$<%=producto.price%></p>
                            <p id="precio"> <span id="off"><%= producto.discount %>% OFF</span> en Efectivo</p>
                            <p id="precio-discount" >Precio con descuento: $<%=producto.price - ((producto.discount * producto.price) /100) %></p>
                        </div>

                        <div class="botones-productos">

                            <a href="/users/carrito" class="button-edit-product">
                                <button type="submit" class="button">Agregar al Carrito</button>
                            </a>
                            <a href="/products/edit/<%=producto.id %>" class="button-edit-product">
                                <button type="submit" class="button">Editar Producto</button>
                            </a>
                            <form action="/products/delete/<%=producto.id %>?_method=DELETE" method="POST" style="margin-bottom: 25px">
                                <button type="submit" class="button">Eliminar</button>
                            </form>
                        </div>
                    </div>
            </div>
        </div>
        <div class="comentario-producto">
            <h2>Descripci√≥n</h2>
            <p><%=producto.description %></p>
        </div>
        
        

    </main>

         <%-include ("./partials/footer")%>


</body>
</html>